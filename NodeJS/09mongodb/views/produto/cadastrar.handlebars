        <div class="form-group col-md-6 mt-4">
            <input type="text" placeholder="Nome" name="nome" class="form-control">
        </div>
        <div class="form-group col-md-6 mt-4">
            <input type="text" placeholder="Segmento" name="segmento" class="form-control">
