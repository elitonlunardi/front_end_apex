<form action="/cliente/editar" method="post">
    <input type="hidden" placeholder="id" name="id" class="form-control" value="{{resultado._id}}">
    <div class="row">
        <div class="form-group col-md-6 mt-4">
            <input type="text" placeholder="Nome" name="nome" class="form-control" value="{{resultado.nome}}">
        </div>
        <div class="form-group col-md-6 mt-4">
            <input type="text" placeholder="Idade" name="idade" class="form-control" value="{{resultado.idade}}">
        </div>
    </div>

    <div class="form-group">
        <input type="text" placeholder="Cidade" name="cidade" class="form-control" value="{{resultado.cidade}}">
    </div>
    <input type="submit" class="btn btn-primary" value="Alterar">
</form>